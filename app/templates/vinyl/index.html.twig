{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_vinyl_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_vinyl_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'vinyl.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 'vinyl.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_year'|trans, 'vinyl.year') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_description'|trans, 'vinyl.description') }}</th>
                <th>{{ 'label_category'|trans }}</th>
                <th>{{ 'label_author'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for vinyl in pagination.items %}
                <tr>
                    <td>{{ vinyl.id }}</td>
                    <td>{{ vinyl.title }}</td>
                    <td>{{ vinyl.year}}</td>
                    <td>{{ vinyl.description }}</td>
                    <td>{{ vinyl.category.name }}</td>
                    <td>{{ vinyl.author.name }}</td>

                    <td>
                        <a href="{{ url('vinyl_show', {id: vinyl.id}) }}" title="{{ 'action_view'|trans }}">
                            {{ 'action_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}